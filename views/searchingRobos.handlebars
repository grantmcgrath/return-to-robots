<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Robos Looking for Work</title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <header id="header">
    <div class="title">
      <a href="/"><h1>Robos Directory</h1></a>
    </div>
    <div class="links">
      <a href=""><h3>Looking 4 Work</h3></a>
      <a href=""><h3>Currently Employed</h3></a>
    </div>
  </header>

  <section id="index">
    {{#robots}}
      <div class="cards">
        <a href="/{{username}}"><img src={{avatar}} class="avatar">
      <h2>{{name}}</h2>
      {{#if job}}
      <p class="job">{{job}}, {{company}}</p>
      {{else}}
      <p class="noJob">Available for hire</p>
      {{/if}}
    </a>
      </div>
    {{/robots}}
  </section>

</html>
